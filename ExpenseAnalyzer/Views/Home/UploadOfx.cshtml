@{
    ViewData["Title"] = "Upload OFX";
}

<h2>Upload OFX File</h2>
<form enctype="multipart/form-data" method="post" asp-action="UploadOfx" asp-controller="Home">
    <div class="mb-3">
        <input class="form-control" type="file" name="ofxFile" id="ofxFile" accept=".ofx" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
@if (TempData["OfxError"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["OfxError"]</div>
}
    </script>
}
